#
# make a list of supported databases field
#
sub make_supported_databases_field {
  my (
    $name, 			# name to give field
    $dbnames_url,		# DB names URL
    $db_doc_url,		# documentation on available DBs
    $is_motif_db,		# true if motif; sequence otherwise, 
                    # accepts empty string as true if 
                    # indent_lvl is undefined, this is 
                    # dodgy but required because I 
                    # can't be certain of finding all 
                    # places where this function is 
                    # called to make sure they pass 
                    # a value.
    $indent_lvl,    # number of tabs to indent, zero if undefined
    $tab            # tab character, "\t" if undefined
  ) = @_;
  my (@fields, $db_type, $select_doc);

  if ($is_motif_db || (!(defined $indent_lvl) && defined $is_motif_db && $is_motif_db eq "")) {
    $db_type = "Motif";
    $dbnames_url .= "&is_motif_db=1";
    $db_doc_url .= "&is_motif_db=1";
  } else {
    $db_type = "Sequence";
    $dbnames_url .= "&is_motif_db=0";
    $db_doc_url .= "&is_motif_db=0";
  }
  $indent_lvl = 0 unless $indent_lvl;
  $tab = "\t" unless $tab;
  my $indent = $tab x $indent_lvl;

  my $db_cat_url = $dbnames_url . "&mode=categories";

  # get list of databases as option fields from dbnames_url
  my $ua = LWP::UserAgent->new();
  my $req = HTTP::Request->new(GET => $db_cat_url);
  my $response = $ua->request($req);
  my @db_categories = split("\n", $response->content());
  my $categories = "";
  my $databases = "";
  if (@db_categories == 1) {
    $req = HTTP::Request->new(GET => $dbnames_url);
    $response = $ua->request($req);
    my @db_names = split("\n", $response->content());
    foreach (@db_names) {
      chomp;
      @fields = split(/,/);
      next if ($fields[0] !~ /\S/ && $fields[4] =~ /\S/);# skip category
      @val_fields = @fields[0..7];
      my $i;
      for ($i = 8; $i < @fields; $i += 2) {
        push(@val_fields, $fields[$i]);
      }
      $opt_val = join(",", @val_fields);
      
      $databases .= "<option value=\"".fix($opt_val)."\" >".$fields[4]."</option>"
    }
  } else {
    my $catid = 0;
    for my $cat (@db_categories) {
      $catid++; 
      $categories .= $indent.$tab."<option value=\"$catid\">".$cat."</option>\n";
    }
  }
  my $content =  
      $indent."<br />$db_type database to search--select <b>one</b> of the following:<br />\n".
      $indent."<br />\n".
      $indent."<!-- supported databases -->\n".
      $indent."A <a href=\"$db_doc_url\"><b>supported database</b></a>:<br />\n";
  my $disabled = "";
  if (@db_categories > 1) {
    $content .=
        $indent."<script type=\"text/javascript\" src=\"../selectdb.js\" defer=\"defer\"></script>\n".
        $indent."Category: <br />\n".
        $indent."<select onchange=\"send_dblist_request('$dbnames_url', this.value, '$name')\">\n".
        $indent.$tab."<option value=\"\" selected=\"selected\" ></option>\n".
        $categories.
        $indent."</select><br />\n".
        $indent."Database:\n<br />";
    $disabled = "disabled=\"disabled\"";
  }
  $content .=
      $indent."<select style=\"min-width:10em;\" id=\"$name\" name=\"$name\" $disabled>\n".
      $indent.$tab."<option value=\"\" selected=\"selected\"></option>\n".
      $databases.
      $indent."</select><br />\n";

  return($content);
} # make_supported_databases_field

sub fix {
  my $text = shift;
  $text =~ s/&/&amp;/g;
  $text =~ s/</&lt;/g;
  $text =~ s/>/&gt;/g;
  $text =~ s/"/&quot;/g;
  return $text;
}

